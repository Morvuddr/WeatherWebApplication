centered-container(background = 'white')
    background-color: background
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

body
    centered-container(#39CCCC)
h1
    color orange
    font 30px Helvetica
    text-shadow: 1px 1px 0 #444
    text-align: center
p
    text-align: center
.inputContainer
    centered-container()
.search
    margin-top: 10px
    display block
    position: relative
    height 50px
    width: 100px
    font-size: 15px
    background-color: #85144b
    color: white
    border-radius: 15px
    outline: none
input
    height 30px
    border-radius: 10px
    position: relative
    display: block
    margin : 0 auto
    width: 500px;
    font Helvetica
    font-size: 20px
    outline: none
    padding-left: 10px
.outputContainer
    centered-container()
    height: 400px
    width: 50%
#myErrorContainer
    font-size: 25px
.loader
  display: none
  border: 16px solid #f3f3f3
  border-top: 16px solid #85144b
  border-radius: 50%
  width: 120px
  height: 120px
  animation: spin 2s linear infinite

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}